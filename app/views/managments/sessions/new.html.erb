

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="panel panel-body login-form">
  <div class="text-center">
    <div class="icon-object border-warning-400 text-warning-400"><i class="icon-people"></i></div>
    <h5 class="content-group-lg">Login to your account <small class="display-block">Enter your credentials</small></h5>
  </div>

  <div class="form-group has-feedback has-feedback-left">
    <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>

  </div>
  <div class="form-group has-feedback has-feedback-left">
    <%= f.input :password, required: false, class: "form-control", placeholder: "password" %>


  </div>
  <div class="form-group login-options">
    <div class="row">
      <div class="col-sm-12">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  </div>

      <div class="form-group">
        <%= f.button :submit, "Log in", class: "btn bg-pink-400 btn-block" do %>
        <i class="icon-circle-right2 position-right"></i>
        <%end%>
      </div>
      <% end %>

      <div class="text-center"> <%= render "managments/shared/links" %> </div>
