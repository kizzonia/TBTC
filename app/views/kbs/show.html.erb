<section class="section lb">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="widget">
          <div class="custom-module">
            <h4 class="module-title"><i class="material-icons">line_style</i> Top FAQ's </h4>
            <div class="list-group">
              <% @kbs.each do |k| %>
              <div class="list-group-item">
                <div class="row-content">
                  <p class="list-group-item-heading">
                    <%= link_to k do %>
                    <i class="material-icons">description</i>
                    <%= k.question %>?<%end %>
                  </p>
                </div>
              </div>
              <% end %>


            </div>
            <%= link_to "View all Answers â†’", kbs_path, class: "Read more" %>
          </div><!-- end custom-module -->
        </div><!-- end widget -->

        <div class="widget">

        </div><!-- end widget -->
      </div>
      <div class="col-md-8">
        <div class="topic-list knowledge-base-single">
          <article class="well btn-group-sm clearfix">
            <header class="topic-title clearfix">
              <h3><%= @kb.title %></h3>
              <small>Created : <%= @kb.created_at.strftime("d%, b% Y%") %></small>
            </header>

            <div class="topic-meta clearfix">


            </div>
            <!-- end topic-meta -->

            <div class="topic-desc row clearfix">
              <div class="col-sm-12">
                <h4><%= @kb.question %></h4>
                <p><%= raw(@kb.body) %> </p>

            </div>
          </div>
          <!-- end tpic-desc -->

          <footer class="topic-footer clearfix">


            <div class="pull-right">
              <div class="customshare">
                <div class="list">
                  <div class="btn btn-default btn-fab btn-fab-mini"><i class="material-icons">share</i>
                    <ul class="list-inline">
                      <li><%= social_share_button_tag(@kb.title) %></li>

                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </footer><!-- end topic -->
        </article><!-- end article well -->


      </div>
    </div><!-- end col -->
  </div><!-- end row -->
</div><!-- end container -->
</section><!-- end section -->
