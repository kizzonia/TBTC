<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="section-title">
          <i class="material-icons alignleft">subdirectory_arrow_right</i>
          <h3> Recent Topics</h3>
          <p>We did our best to cover all topics and questions related to tradebitr. Each section answers important questions frequently asked.</p>
        </div><!-- end title -->

        <aside class="topic-list">
          <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <% @kbs.each do |k| %>
            <div class="panel panel-default">
              <article class="well btn-group-sm clearfix">
                <div class="featured-grade btn btn-info btn-fab">
                  <i class="material-icons">grade</i>
                  <div class="ripple-container"></div>
                </div>
                <div class="panel-heading" role="tab" id="headingOne">
                  <div class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= k.id %>" aria-expanded="true" aria-controls="collapseOne">
                      <header class="topic-title clearfix">
                        <h3><%= k.title %></h3>
                      </header>
                    </a>
                  </div>
                </div>
                <div id="<%= k.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                  <div class="panel-body">
                    <div class="topic-meta clearfix">
                      <div class="pull-left">
                        <a class="btn btn-default btn-fab btn-fab-mini" href="#" data-toggle="tooltip" data-placement="bottom" title="Like">
                          <i class="material-icons">thumb_up</i>
                        </a>
                        <a class="btn btn-default btn-fab btn-fab-mini" href="#" data-toggle="tooltip" data-placement="bottom" title="Un Like">
                          <i class="material-icons">thumb_down</i>
                        </a>
                      </div>
                      <!-- end left -->

                      <div class="pull-right">
                        <a class="btn btn-default btn-fab btn-fab-mini" href="#" data-toggle="tooltip" data-placement="bottom" title="12 comments">
                          <i class="material-icons">comment</i>
                        </a>

                      </div>
                      <!-- end right -->
                    </div>
                    <!-- end topic-meta -->

                    <div class="topic-desc row-fluid clearfix">
                      <div class="col-sm-2">
                        <%= image_tag "team_03.jpg", class: "avatar img-circle img-responsive" %>
                      </div>
                      <div class="col-sm-10">
                        <h4>Tradebitr Support</h4>
                        <small>Support Team</small>
                        <p> <%= k.question %></p>
                        <%= link_to "Continue reading â†’", k, class: "readmore" %>
                      </div>
                    </div>
                    <!-- end tpic-desc -->

                    <footer class="topic-footer clearfix">
                      <div class="pull-left">
                        <ul class="list-inline tags">
                          <li><a href="#">Tradebitr</a></li>
                          <li><a href="#">Bitcoin Trading</a></li>
                          <li><a href="#">FAQ's</a></li>
                        </ul>
                        <!-- end tags -->
                      </div>

                      <div class="pull-right">
                        <div class="customshare">
                          <div class="list">
                            <div class="btn btn-default btn-fab btn-fab-mini"><i class="material-icons">share</i>
                              <ul class="list-inline">
                                <li><a href="#" class="tw"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" class="fb"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" class="gp"><i class="fa fa-google-plus"></i></a></li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </footer>
                    <!-- end topic -->
                  </div>
                  <!-- end panel-body -->
                </div>
                <!-- end panel-collapse -->
              </article>
              <!-- end article well -->
            </div>
            <!-- end panel -->

          <% end %>



          </div>
          <!-- end panel-group -->
        </aside>
        <!-- end topic-list -->

      </div><!-- end col -->

    <%= render "shared/blog_sidebar" %>
    </div><!-- end row -->
  </div><!-- end container -->
</section><!-- end section -->
