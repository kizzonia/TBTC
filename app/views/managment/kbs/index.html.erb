
<div class="page-header page-header-default">
  <div class="page-header-content">
    <div class="page-title">
      <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Managment</span> - Dashboard</h4>
    </div>
  </div>

  <div class="breadcrumb-line">
    <ul class="breadcrumb">
      <li><a href="index.html"><i class="icon-home2 position-left"></i> Management</a></li>
      <li class="active">Knowledge Base </li>
    </ul>

  </div>
</div>
<!-- /page header -->
<!-- Info blocks -->



					<!-- Questions area -->
					<h4 class="text-center content-group">
						Knowledge Base
						<small class="display-block">View All answered questions and new updates </small>
					</h4>

					<div class="row">
						<div class="col-lg-12">
              <% if Kb.all.exists? %>

              <% @kbs.each do |k| %>
							<!-- Questions list -->

							<div class="panel-group panel-group-control panel-group-control-right">
								<div class="panel panel-white">
									<div class="panel-heading">
										<h6 class="panel-title">
											<a class="collapsed" data-toggle="collapse" href="#<%= k.id %>">
												<i class="icon-help position-left text-slate"></i> <%= k.title %>
											</a>
										</h6>
									</div>

									<div id="<%= k.id %>" class="panel-collapse collapse">
										<div class="panel-body">
                      <%= raw(k.body) %>
										</div>

										<div class="panel-footer panel-footer-transparent">
											<div class="heading-elements">
												<span class="text-muted heading-text">Posted:<%= k.created_at.strftime("%d %b %Y") %></span>

												<ul class="list-inline list-inline-condensed heading-text pull-right">
                          <li> Answered By  <%= current_managment.email %>
                            <li><%= social_share_button_tag(k.title) %></li>

                          </li>
													<li>   <%= link_to edit_managment_kb_path(k), class: "text-muted" do %>

                            <i class=" icon-pencil5 position-left"></i> Edit
                            <% end %>
                          </li>
													<li>
                              <%= link_to managment_kb_path(k), method: :delete, class: "text-muted" do %>
                            <i class="icon-bin2 position-left"></i> Del
                              <%end %>
                          </li>
												</ul>
											</div>
										</div>
									</div>
								</div>
              </div>

              <%end %>
              <% else %>
              <div class="col-md-8 col-md-offset-2" >
              <div class="panel panel-flat">
                <div class="panel-heading">
                  <h6 class="panel-title">No FAQ's</h6>
                  <div class="heading-elements">
                    <ul class="icons-list">
                              <li><a href="#"><i class="icon-cog3"></i></a></li>
                            </ul>
                          </div>
                </div>

                <div class="panel-body">

                  <%= link_to new_managment_kb_path, class: "btn bg-teal btn-block" do %>
                    Create knowledge <i class="icon-comment position-right"></i>

                    <% end %>

                </div>
            </div>
          </div>

            <% end %>
